[{
    "id": "static_create_params",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema create params from client",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "maxLength": 70,
            "pattern": "^[a-zA-Z0-9\\, ]+$"
        },
        "subTitle": {
            "type": "string"
        },
        "metaTitle": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9\\, ]+$"
        },
        "metaDescription": {
            "type": "string",
            "pattern": "^ *([a-zA-Z0-9,.-] ?)+ *$"
        },
        "placement": {
            "type": "string",
            "maxLength": 50,
            "pattern": "^[a-zA-Z0-9\\, ]+$"
        },
        "type": {
            "type": "string",
            "enum": ["STATIC", "BLOCK", "SLOT"]
        },
        "content": {
            "type": "string"
        },
        "slug": {
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$"
        },
        "isActive": {
            "type": "string",
            "enum": ["true", "false"]
        },
        "zoneId": {
            "type": ["string", "null"],
            "pattern": "^[0-9\\,]+$"
        }
    },
    "required": ["title", "metaTitle", "metaDescription", "content", "placement", "type"],
    "anyOf":[
         {
            "properties": {
                "type": { "enum": ["STATIC"] }
            },
            "required": ["subTitle", "slug"]
        },
        {
            "properties": {
                "type": { "enum": ["SLOT"] }
            },
            "required": ["zoneId"]
        },
        {
            "properties": {
                "type": { "enum": ["BLOCK"] }
            }
        }
    ]
  },
  {
    "id": "static_get_params",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema get params from client",
    "type": "object",
    "properties": {
        "query": {
            "type": ["string", "null"],
            "default": ""
        },
        "type": {
            "type": ["string", "null"],
            "enum": ["STATIC", "BLOCK", "SLOT"],
            "default": ""
        },
        "page": {
            "type": ["string", "null"],
            "default": "1",
            "pattern": "^[0-9]"
        },
        "limit": {
            "type": ["string", "null"],
            "default": "10",
            "pattern": "^[0-9]"
        },
        "orderBy": {
            "type": ["string", "null"],
            "enum": ["id", "created", "modified", "placement"],
            "default": "id"
        },
        "sort": {
            "type": ["string", "null"],
            "enum": ["asc", "desc"],
            "default": "asc"
        },
        "isActive": {
            "type": ["string", "null"],
            "enum": ["true", "false"],
            "default": "true"
        }
    },
    "required": ["isActive", "sort", "orderBy", "limit", "page", "type"]
  },
  {
    "id": "static_get_by_slug_params",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema get by slug params from client",
    "type": "object",
    "properties": {
        "slug": {
            "type": "string",
            "pattern": "^[a-z0-9\\-]+$"
        }
    },
    "required": ["slug"]
  }
]
