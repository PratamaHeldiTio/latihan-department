[
  {
    "id": "get_list_department",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema get list department",
    "type": "object",
    "properties": {
      "search": {
        "type": "string"
      },
      "sortBy": {
        "type": "string",
        "default": "id",
        "enum": [
          "name"
        ]
      },
      "orderBy": {
        "type": "string",
        "default": "asc",
        "enum": [
          "desc",
          "asc",
          "DESC",
          "ASC"
        ]
      },
      "limit": {
        "type": [
          "string",
          "integer"
        ],
        "default": "10",
        "pattern": "^[1-9]\\d*$"
      },
      "page": {
        "type": [
          "string",
          "integer"
        ],
        "default": "1",
        "pattern": "^[1-9]\\d*$"
      }
    }
  },
  {
    "id": "create_department",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema create department",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
       "status": {
        "type": "string",
        "enum": [
          "active",
          "inactive"
        ]
      }
    }
  },{
    "id": "update_department",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema update department",
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "name": {
        "type": "string"
      },
       "status": {
        "type": "string",
        "enum": [
          "active",
          "inactive"
        ]
      }
    }
  }
]
